# Database Configuration
SQLSERVER_SA_PASSWORD=YourStrong@Passw0rd
CONNECTION_STRING_DEFAULT=Server=localhost,1433;Database=CleanArchitectureDb;User Id=sa;Password=YourStrong@Passw0rd;TrustServerCertificate=true;

# Redis Configuration
REDIS_CONNECTION_STRING=localhost:6379

# MongoDB Configuration
MONGODB_CONNECTION_STRING=mongodb://localhost:27017
MONGODB_ROOT_USERNAME=admin
MONGODB_ROOT_PASSWORD=admin123
MONGO_DATABASE=CleanArchitectureDb

# JWT Configuration
JWT_KEY=ThisIsASecretKeyForJWTTokenGenerationAndShouldBeAtLeast256BitsLong
JWT_ISSUER=CleanArchitectureAPI
JWT_AUDIENCE=CleanArchitectureClient
JWT_ACCESS_TOKEN_MINUTES=60
JWT_REFRESH_TOKEN_DAYS=7

# Seeding Configuration
SEED_ADMIN_EMAIL=admin@example.com
SEED_ADMIN_PASSWORD=Admin@123456

# Firebase Configuration (Optional)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CREDENTIALS_PATH=firebase-credentials.json

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:4200,https://localhost:4200

# Rate Limiting
RATE_LIMIT_GENERAL_LIMIT=100
RATE_LIMIT_AUTH_LIMIT=10

# Hangfire Configuration
HANGFIRE_DASHBOARD_USER=admin
HANGFIRE_DASHBOARD_PASS=admin123

# Audit Configuration
AUDIT_ENABLED=true
AUDIT_MONGO_COLLECTION=audit_logs
AUDIT_MAX_DOCUMENT_SIZE_KB=256

# Email Configuration (Optional)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USERNAME=your-email@gmail.com
EMAIL_SMTP_PASSWORD=your-app-password

# SMS Configuration (Optional)
SMS_PROVIDER=Twilio
SMS_ACCOUNT_SID=your-twilio-account-sid
SMS_AUTH_TOKEN=your-twilio-auth-token
SMS_FROM_NUMBER=+1234567890

# Application Configuration
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:5000